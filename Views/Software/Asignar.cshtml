@{
    ViewData["Title"] = "Asignar software";
}

<h2 class="fw-bold mb-3">Asignar software a computadora</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="idSoftware" value="@ViewBag.IdSoftware" />

    <div class="mb-3">
        <label class="form-label">Computadora</label>
        <select name="idComputadora" class="form-select" required>
            <option value="">Seleccione computadora</option>

            @foreach (var c in ViewBag.Computadoras)
            {
                <option value="@c.IdComputadora">
                    @c.CodigoActivo
                </option>
            }
        </select>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            Cancelar
        </a>

        <button type="submit" class="btn btn-primary">
            Asignar
        </button>
    </div>
</form>
