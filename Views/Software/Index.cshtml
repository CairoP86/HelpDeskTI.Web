@model List<HelpDeskTI.Web.Models.Software>

<h2>Gestión de Software</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Versión</th>
            <th>Licencias</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Nombre</td>
                <td>@s.Version</td>
                <td>@s.LicenciasInstaladas / @s.StockLicencias</td>
                <td class="text-nowrap">
                    <a asp-action="Asignar"
                       asp-route-id="@s.IdSoftware"
                       class="btn btn-sm btn-primary">
                        Asignar
                    </a>

                    <a asp-action="SoftwarePorComputadora"
                       asp-route-id="@s.IdSoftware"
                       class="btn btn-sm btn-info">
                        Ver equipos
                    </a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Historial"
                           class="btn btn-sm btn-secondary">
                            Historial
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
