@model List<HelpDeskTI.Web.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}



<!-- ENCABEZADO -->
<div class="mb-4">
    <h2 class="fw-bold mb-0">Departamentos</h2>
    <small class="text-muted">Áreas internas de la empresa</small>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="text-muted">
        Total de departamentos: <strong>@Model.Count</strong>
    </div>

    <!-- NUEVO DEPARTAMENTO -->
    <a class="btn btn-primary"
       asp-controller="Departamentos"
       asp-action="Nuevo">
        + Nuevo departamento
    </a>
</div>

<!-- TABLA -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="2" class="text-center text-muted py-4">
                                No hay departamentos registrados
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var d in Model)
                        {
                            <tr>
                                <td>@d.Nombre</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary"
                                       asp-controller="Departamentos"
                                       asp-action="Editar"
                                       asp-route-id="@d.IdDepartamento">
                                        Editar
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
