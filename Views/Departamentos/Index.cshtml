@{
    ViewData["Title"] = "Departamentos";
}

<!-- ENCABEZADO -->
<div class="mb-4">
    <h2 class="fw-bold mb-0">Departamentos</h2>
    <small class="text-muted">Áreas internas de la empresa</small>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="text-muted">
        Total de departamentos: <strong>2</strong>
    </div>

    <!-- NUEVO DEPARTAMENTO -->
    <a class="btn btn-primary"
       asp-controller="Departamentos"
       asp-action="Nuevo">
        + Nuevo departamento
    </a>
</div>

<!-- TABLA -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Encargado</th>
                        <th>Usuarios</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>

                <tbody>

                    <!-- FILA 1 -->
                    <tr>
                        <td>TI</td>
                        <td>Cairo Pérez</td>
                        <td>5</td>
                        <td class="text-end">

                            <a class="btn btn-sm btn-outline-primary me-1"
                               asp-controller="Departamentos"
                               asp-action="Detalle">
                                Ver
                            </a>

                            <a class="btn btn-sm btn-outline-secondary"
                               asp-controller="Departamentos"
                               asp-action="Editar">
                                Editar
                            </a>

                        </td>
                    </tr>

                    <!-- FILA 2 -->
                    <tr>
                        <td>Finanzas</td>
                        <td>Ana Jiménez</td>
                        <td>3</td>
                        <td class="text-end">

                            <a class="btn btn-sm btn-outline-primary"
                               asp-controller="Departamentos"
                               asp-action="Detalle">
                                Ver
                            </a>

                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
