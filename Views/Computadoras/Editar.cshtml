@model HelpDeskTI.Web.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<!-- ENCABEZADO -->
<div class="mb-4">
    <h2 class="fw-bold mb-0">Editar usuario</h2>
    <small class="text-muted">Modificar información del usuario</small>
</div>

<!-- FORMULARIO -->
<div class="card shadow-sm">
    <div class="card-body">

        <form asp-controller="Usuarios" asp-action="Editar" method="post">

            <!-- CÉDULA (NO EDITABLE) -->
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Cédula</label>
                    <input class="form-control"
                           name="Cedula"
                           value="@Model.Cedula"
                           readonly />
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label">Nombre</label>
                    <input class="form-control"
                           name="Nombre"
                           value="@Model.Nombre"
                           required />
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label">Primer apellido</label>
                    <input class="form-control"
                           name="Apellido1"
                           value="@Model.Apellido1"
                           required />
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Segundo apellido</label>
                    <input class="form-control"
                           name="Apellido2"
                           value="@Model.Apellido2" />
                </div>

                <!-- ROL -->
                <div class="col-md-4 mb-3">
                    <label class="form-label">Rol</label>
                    <select class="form-select" name="Rol" required>
                        <option value="Empleado" selected="@(Model.Rol == "Empleado")">Empleado</option>
                        <option value="Tecnico" selected="@(Model.Rol == "Tecnico")">Técnico</option>
                        <option value="Admin" selected="@(Model.Rol == "Admin")">Administrador</option>
                    </select>
                </div>

                <!-- ESTADO -->
                <div class="col-md-4 mb-3">
                    <label class="form-label">Estado</label>
                    <select class="form-select" name="Activo">
                        <option value="true" selected="@Model.Activo">Activo</option>
                        <option value="false" selected="@(Model.Activo == false)">Inactivo</option>
                    </select>
                </div>
            </div>

            <hr>

            <div class="d-flex justify-content-end gap-2">
                <a asp-controller="Usuarios"
                   asp-action="Index"
                   class="btn btn-outline-secondary">
                    Cancelar
                </a>

                <button type="submit" class="btn btn-primary">
                    Guardar cambios
                </button>
            </div>

        </form>

    </div>
</div>
