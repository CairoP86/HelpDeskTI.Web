@{
    ViewData["Title"] = "Editar Usuario";
}

<!-- ENCABEZADO -->
<div class="mb-4">
    <h2 class="fw-bold mb-0">Editar usuario</h2>
    <small class="text-muted">Modificar información del usuario</small>
</div>

<!-- FORMULARIO -->
<div class="card shadow-sm">
    <div class="card-body">

        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Cédula</label>
                <!-- Cédula no se edita -->
                <input class="form-control" value="801300225" readonly>
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label">Nombre</label>
                <input class="form-control" value="Cairo">
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label">Primer apellido</label>
                <input class="form-control" value="Pérez">
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Segundo apellido</label>
                <input class="form-control" value="López">
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label">Rol</label>
                <select class="form-select">
                    <option>Empleado</option>
                    <option>Técnico</option>
                    <option selected>TI</option>
                </select>
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label">Estado</label>
                <select class="form-select">
                    <option selected>Activo</option>
                    <option>Inactivo</option>
                </select>
            </div>
        </div>

        <hr>

        <div class="d-flex justify-content-end gap-2">
            <a asp-controller="Usuarios"
               asp-action="Index"
               class="btn btn-outline-secondary">
                Cancelar
            </a>

            <button class="btn btn-primary">
                Guardar cambios
            </button>
        </div>

    </div>
</div>
