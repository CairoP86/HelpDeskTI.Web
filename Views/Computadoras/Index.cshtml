@{
    ViewData["Title"] = "Computadoras";
}
<h1 class="mb-1">Computadoras</h1>
<p class="text-muted mb-4">Equipos registrados en la empresa</p>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="text-muted">
        Total de equipos: <strong>4</strong>
    </div>

    <a asp-controller="Computadoras"
       asp-action="Nuevo"
       class="btn btn-primary">
        + Nueva computadora
    </a>
</div>



<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Activo</th>
                    <th>Usuario</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Estado</th>
                    <th>Ubicación</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>

            <tbody>

                <!-- FILA 1 -->
                <tr>
                    <td>PC-001</td>
                    <td>Cairo Pérez</td>
                    <td>Dell</td>
                    <td>Latitude 5420</td>
                    <td>
                        <span class="badge bg-success">Operativa</span>
                    </td>
                    <td>TI</td>
                    <td class="text-end">

                        <a class="btn btn-sm btn-outline-primary"
                           asp-controller="Computadoras"
                           asp-action="Detalle">
                            Ver
                        </a>

                        <a class="btn btn-sm btn-outline-secondary"
                           asp-controller="Computadoras"
                           asp-action="Editar">
                            Editar
                        </a>

                    </td>
                </tr>

                <!-- FILA 2 -->
                <tr>
                    <td>PC-002</td>
                    <td>Ana Jiménez</td>
                    <td>HP</td>
                    <td>EliteBook 840</td>
                    <td>
                        <span class="badge bg-warning text-dark">Mantenimiento</span>
                    </td>
                    <td>Finanzas</td>
                    <td class="text-end">

                        <a class="btn btn-sm btn-outline-primary"
                           asp-controller="Computadoras"
                           asp-action="Detalle">
                            Ver
                        </a>

                    </td>
                </tr>

                <!-- FILA 3 -->
                <tr>
                    <td>PC-003</td>
                    <td>—</td>
                    <td>Lenovo</td>
                    <td>ThinkPad E14</td>
                    <td>
                        <span class="badge bg-secondary">Disponible</span>
                    </td>
                    <td>Bodega</td>
                    <td class="text-end">

                        <a class="btn btn-sm btn-outline-primary"
                           asp-controller="Computadoras"
                           asp-action="Detalle">
                            Ver
                        </a>

                        <a class="btn btn-sm btn-outline-secondary"
                           asp-controller="Computadoras"
                           asp-action="Editar">
                            Editar
                        </a>

                    </td>
                </tr>

                <!-- FILA 4 -->
                <tr>
                    <td>PC-004</td>
                    <td>Carlos Méndez</td>
                    <td>Asus</td>
                    <td>VivoBook</td>
                    <td>
                        <span class="badge bg-danger">Fuera de servicio</span>
                    </td>
                    <td>Ventas</td>
                    <td class="text-end">

                        <a class="btn btn-sm btn-outline-primary"
                           asp-controller="Computadoras"
                           asp-action="Detalle">
                            Ver
                        </a>

                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>
