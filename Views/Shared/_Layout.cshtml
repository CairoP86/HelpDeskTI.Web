<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelpDeskTI.Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelpDeskTI.Web.styles.css" asp-append-version="true" />
</head>
<body>

@{
    // 👉 Variable que indica si hay sesión
    var usuario = Context.Session.GetString("Usuario");
}

<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                HelpDeskTI.Web
            </a>

            @* 👉 SOLO mostramos el menú si hay sesión *@
            @if (usuario != null)
            {
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tiquetes" asp-action="Index">Tiquetes</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Computadoras" asp-action="Index">Computadoras</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Software" asp-action="Index">Software</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Departamentos" asp-action="Index">Departamentos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Notificaciones" asp-action="Index">Notificaciones</a>
                        </li>
                    </ul>

                    <span class="navbar-text me-3">
                        @Context.Session.GetString("NombreUsuario")
                    </span>

                    <a class="btn btn-outline-danger"
                       asp-controller="Account"
                       asp-action="Logout">
                        Cerrar sesión
                    </a>
                </div>
            }

        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - HelpDeskTI.Web -
        <a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
