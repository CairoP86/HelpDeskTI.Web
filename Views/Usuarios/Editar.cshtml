@model HelpDeskTI.Web.Models.Usuario

<h2>Editar usuario</h2>

<form asp-action="Editar" method="post" class="card p-4 shadow-sm">

    <input asp-for="Cedula" type="hidden" />

    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Apellido 1</label>
        <input asp-for="Apellido1" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Apellido 2</label>
        <input asp-for="Apellido2" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Rol</label>
        <select asp-for="Rol" class="form-select">
            <option>Empleado</option>
            <option>Tecnico</option>
            <option>Admin</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Departamento</label>
        <select asp-for="IdDepartamento" class="form-select">
            <option value="">Seleccione un departamento</option>
            @foreach (var d in (List<Departamento>)ViewBag.Departamentos)
            {
                <option value="@d.IdDepartamento"
                        selected="@(Model.IdDepartamento == d.IdDepartamento)">
                    @d.Nombre
                </option>
            }
        </select>
    </div>

    <!-- ✅ ESTADO ACTIVO (FORMA CORRECTA) -->
    <div class="form-check mb-4">
        <input class="form-check-input"
               asp-for="Activo"
               type="checkbox" />
        <label class="form-check-label">
            Usuario activo
        </label>
    </div>

    <div class="text-end">
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        <button class="btn btn-primary">Guardar cambios</button>
    </div>
</form>
