@model List<Usuario>

<h1 class="mb-3">Usuarios</h1>

<div class="d-flex justify-content-between mb-3">
    <span class="text-muted">Total: @Model.Count</span>

    <a asp-action="Nuevo" class="btn btn-primary">
        + Nuevo usuario
    </a>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Rol</th>
            <th>Departamento</th>
            <th>Estado</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted py-4">
                    No hay usuarios registrados
                </td>
            </tr>
        }
        else
        {
            foreach (var u in Model)
            {
                <tr>
                    <td>@u.Nombre</td>
                    <td>@u.Rol</td>
                    <td>@(u.NombreDepartamento ?? "—")</td>
                    <td>
                        @if (u.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Detalle"
                           asp-route-cedula="@u.Cedula"
                           class="btn btn-sm btn-outline-primary">
                            Ver
                        </a>
                        <a asp-action="Editar"
                           asp-route-id="@u.Cedula"
                           class="btn btn-sm btn-outline-secondary ms-1">
                            Editar
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
