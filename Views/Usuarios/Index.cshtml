@model List<HelpDeskTI.Web.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h2 class="fw-bold mb-3">Usuarios</h2>

<div class="d-flex justify-content-between mb-3">
    <div class="text-muted">
        Total usuarios: <strong>@Model.Count</strong>
    </div>

    <a asp-action="Nuevo" class="btn btn-primary">
        + Nuevo usuario
    </a>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Rol</th>
            <th>Activo</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nombre @u.Apellido1</td>
                <td>@u.Rol</td>
                <td>
                    @(u.Activo ? "Sí" : "No")
                </td>
                <td class="text-end">
                    <a asp-action="Editar"
                       asp-route-id="@u.Cedula"
                       class="btn btn-sm btn-outline-secondary">
                        Editar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
